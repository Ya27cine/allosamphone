{% extends 'admin.html.twig' %}

{% block BREADCRUMB %}

<!-- /BREADCRUMB -->
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="{{path('product_index')}}">Product-by-Category</a></li>
      <li class="breadcrumb-item active">{{category}}</li>
    </ol>
  <!-- BREADCRUMB -->
{% endblock %}

{% block body %}


    <div class="row my-2">
        <div class="col-md-3"><a  class="btn btn-primary my-1" href="{{ path('product_new') }}">Create a new product</a></div>
        <div class="col-md-9"> <input type="text" id="myInput" class="form-control" placeholder="Search by Name"> </div>
    </div>

  <table id="myTable" class="table table-striped table-bordered"  style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
              <!--  <th>Category</th> -->
                <th style="width: 30%">Modele</th>
                <th >Libelle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td><a href="{{ path('product_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                <td>{{ product.marque.name }}</td>
               <!--  <td>{{ product.category.name }}</td>-->
                <td>
                  <img src="{{ asset('uploads/products/'~ product.image ) }}" alt="null" width="30%" height="10%">
                  {{ product.modele }}
                </td>
                <td>
                    {{ product.libelle }}
                </td>
                <td>
                    <ul class="inline">                
                            <a class="btn btn-danger " href="{{ path('stock_index', { 'id_prod': product.id, 'libelle': product.libelle, 'category': category }) }}"> 
                                <i class="fas fa-database"></i>
                             </a>   
                             <a class="btn btn-info" href="{{ path('product_show', { 'id': product.id }) }}">
                                  <i class="fas fa-eye"></i>
                             </a>              
                            <a class="btn btn-warning" href="{{ path('product_edit', { 'id': product.id }) }}">
                                 <i class="fas fa-edit"></i>
                            </a>
                        
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(products) }}
</div>
      

      
{% endblock %}


{% block javascripts %}
    <script type="text/javascript" src="{{ asset('front/jquery.js')}}"></script>
    <script type="text/javascript">
        $(document).ready(function(){
          $("#myInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
          });
        });
    </script>
{% endblock %}