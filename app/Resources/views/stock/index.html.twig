{% extends 'admin.html.twig' %}

{% block BREADCRUMB %}

<!-- /BREADCRUMB -->
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="{{path('product_index')}}">Product-by-Category</a></li>
      <li class="breadcrumb-item active">Les Varients :  {{ libelle }} - ID : {{ id_prod }} / Category : {{ category }}</li>
    </ol>
  <!-- BREADCRUMB -->
{% endblock %}


{% block body %}


 <div class="row my-2">
        <div class="col-md-3"><a  class="btn btn-primary my-1" href="{{ path('stock_new', {'id_prod': id_prod, 'category': category}) }}">Create a new Va</a></div>
        <div class="col-md-9"> <input type="text" id="myInput" class="form-control" placeholder="Search by Name"> </div>
    </div>

    <table id="myTable" class="table table-striped table-bordered"  style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Title</th>
                <th>Value</th>
                <th>Ref</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for stock in stocks %}
            <tr>
                <td><a href="{{ path('stock_show', { 'id': stock.id }) }}">{{ stock.id }}</a></td>
                <td>{{ stock.quantity}}</td>
                <td>{{ stock.price }}</td>
                <td>{{ stock.title }}</td>
                <td>{{ stock.value }}</td>
                <td>{{ stock.ref }}</td>
                <td>              
                    <a class="btn btn-primary" href="{{ path('stock_show', { 'id': stock.id }) }}">show</a>            
                    <a class="btn btn-warning" href="{{ path('stock_edit', { 'id': stock.id }) }}">edit</a>                  
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}




{% block javascripts %}
    <script type="text/javascript" src="{{ asset('front/jquery.js')}}"></script>
    <script type="text/javascript">
        $(document).ready(function(){
          $("#myInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function() {
              $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
          });
        });
    </script>
{% endblock %}