{% extends 'admin.html.twig' %}

{% block body %}
    <div class="container">
                <div class="row">
                        <h2 class="my-3 center-block">Add variants for PRODUCT:{{produit}} / category {{ category }}</h2>
                
                        {{ form_start(form) }}
                                    <div class="form-group">   
                                        <div class="row" >
                                                 <div class="col-md-4" disabled> {{ form_row(form.product, { 'attr': {'class': 'form-control'}}) }}</div>  
                                        </div>     
                                    </div>

                                   <div class="form-group">
                                         <div class="row">
                                             <div class="col-md-4"> {{ form_row(form.title, { 'attr': {'class': 'form-control'}}) }}</div>
                                             <div class="col-md-5"> {{ form_row(form.value, { 'attr': {'class': 'form-control'}}) }}</div>
                                             <div class="col-md-3"> {{ form_row(form.ref, { 'attr': {'class': 'form-control'}}) }}</div>
                                         </div>
                                    </div>

                                     <div class="form-group">
                                         <div class="row">
                                             <div class="col-md-3"> {{ form_row(form.quantity, { 'attr': {'class': 'form-control'}}) }}</div>
                                             <div class="col-md-3"> {{ form_row(form.price, { 'attr': {'class': 'form-control'}}) }}</div>
                                             <div class="col-md-3"> {{ form_row(form.sold, { 'attr': {'class': 'form-control'}}) }} </div>
                                             <div class="col-md-3">{{ form_row(form.promo, { 'attr': {'class': 'form-control'}}) }}</div>
                                         </div>
                                    </div>                     
                                    
                                    <div class="form-group">
                                        <div class="row">
                                            <div class="col-md-3">{{ form_row(form.img1, { 'attr': {'class': 'form-control'}}) }}</div>
                                            <div class="col-md-3">{{ form_row(form.img2, { 'attr': {'class': 'form-control'}}) }}</div>
                                            <div class="col-md-3">{{ form_row(form.img3, { 'attr': {'class': 'form-control'}}) }}</div>
                                            <div class="col-md-3">{{ form_row(form.img4, { 'attr': {'class': 'form-control'}}) }}</div>
                                        </div>
                                    </div>

                                  <input class="btn btn-primary btn-block my-2" type="submit" value="Create" />
                          
                        {{ form_end(form) }}
                </div>
    </div>




  
{% endblock %}

